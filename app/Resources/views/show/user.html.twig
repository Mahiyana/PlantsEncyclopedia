{% extends 'base.html.twig' %}

{% block body %}
<h1>{% trans %}Użytkownik{% endtrans %}</h1>
<table class="table">
  <tr>
    <th>{% trans %}Login{% endtrans %} </th>
    <th> {{ user.username }} </th>
  </tr>
  <tr>
    <th>Email</th>
    <th> {{ user.email }} </th>
  </tr>
  <tr>
    <th>{% trans %}Role{% endtrans %} </th>
    <th> 
      <ul>
         {% for role in user.roles %}
         <li> {{ role }} </li>
        {% endfor %}
      </ul>
    </th>
  </tr>

</table>

<a href='/show/users'>{% trans %}Powrót do listy użytkowników{% endtrans %}</a>
{% endblock %}
