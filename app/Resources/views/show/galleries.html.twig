{% extends 'base.html.twig' %}

{% block body %}
<h1>{% trans %}Galerie{% endtrans %}</h1>

<table class="table">
{% for gallery in galleries %}
  <tr>
    <th>{% trans %}Nazwa{% endtrans %}</th>
    <th> <a href = '/show/gallery/{{ gallery.ID}}'>{{ gallery.name }} </a>
  </tr>
  <tr>
    <th>{% trans %}Opis{% endtrans %}</th>
    <th> {{ gallery.getDescription2 }} </th>
  </tr>
{% endfor %}
</table>



{% if is_granted('ROLE_GALLERY_ADD') %}<a href='/add/gallery'>{% trans %}Dodaj nową galerię{% endtrans %}</a>{% endif %}
{% endblock %}
